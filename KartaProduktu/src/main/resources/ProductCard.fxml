<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane fx:id="root" prefHeight="450.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fgl.product.GameManager">
   <children>
      <Label fx:id="gameTitle" layoutX="49.0" layoutY="49.0" prefHeight="70.0" text="Title">
         <font>
            <Font size="36.0" />
         </font>
      </Label>
      <Label fx:id="gameAuthor" layoutX="82.0" layoutY="120.0" text="Author" />
      <Label layoutX="50.0" layoutY="292.0" text="Tags:" />
      <Label fx:id="gameTags" layoutX="56.0" layoutY="321.0" prefHeight="18.0" prefWidth="137.0" text="Tags" />
      <Label layoutX="51.0" layoutY="348.0" text="Downloads:" />
      <Label fx:id="gameUserCount" layoutX="67.0" layoutY="366.0" text="10" textAlignment="CENTER">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <Button fx:id="buttonReviews" layoutX="55.0" layoutY="403.0" mnemonicParsing="false" onAction="#ShowReviews" text="Show Reviews" />
      <TextArea fx:id="gameDescription" editable="false" layoutX="51.0" layoutY="149.0" prefHeight="131.0" prefWidth="200.0" />
      <Button fx:id="editButton" layoutX="46.0" layoutY="25.0" mnemonicParsing="false" onAction="#buttonEditProductCard" text="Edit" />
